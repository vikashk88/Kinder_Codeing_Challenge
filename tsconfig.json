{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "@wdio/globals/types",
      "node",
      "@wdio/mocha-framework",
      "@wdio/types"
    ],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "wdio.conf.ts",
    "test/**/*.ts",
    "./config/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}